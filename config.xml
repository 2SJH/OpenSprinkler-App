<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="62" id="com.albahra.sprinklers" version="1.6.0" versionCode="62" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>OpenSprinkler</name>
    <description>
	        Designed to allow intuitive control of the OpenSprinkler irrigation controller.
	    </description>
    <author email="salbahra@gmail.com" href="http://albahra.com/sprinklers/">
	        Samer Albahra
	    </author>
    <content src="index.html" />
